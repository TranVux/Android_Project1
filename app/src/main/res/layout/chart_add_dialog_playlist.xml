<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="127dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="#292929"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Tạo playlist" />

        <EditText
            android:id="@+id/tvnameplaylist"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingStart="5dp"
            android:textSize="11dp"
            android:backgroundTint="#4B4B4B"
            android:background="@drawable/bg_edit_text_chart"
            android:hint="Nhập tên playlist" />

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLuu"
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_button_chart"
            android:text="Lưu" />

        <TextView
            android:id="@+id/tvHuy"
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_button_chart"
            android:text="Hủy" />
    </LinearLayout>
</LinearLayout>